<div class="hidden" id="login-form">
  <ul>
    <%= form_tag create_session_path, method: "POST", remote: true do %>
      <li>
        <%= text_field_tag :email, nil, placeholder: "Email" %>
      </li>
      <li>
        <%= password_field_tag :password, nil, placeholder: "Password" %>
      </li>
      <li>
        <%= submit_tag "Login" %>
      </li>
    <% end %>
  </ul>
</div>