<div class="hidden" id="sign-in-form">
  <%= form_tag create_session_path, method: "POST", remote: true do %>
    <%= text_field_tag :email, nil, placeholder: "Email" %><br>
    <%= password_field_tag :password, nil, placeholder: "Password" %><br>
    <%= submit_tag("Sign-In", :class=> "submit-button") %>
  <% end %>
</div>