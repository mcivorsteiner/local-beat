<div id="search-window" class="hidden">
  <ul>
  <%= form_tag('/events', :method=> :get, :class=>"search", remote: true) do %>
    <li>
      <%= text_field_tag :user_input_location_name, nil, placeholder: "Location" %>
    </li>
    <li class="advanced-options hidden">
      <%= label_tag :artist_name %>
      <%= text_field_tag :artist_name %>
    </li>
    <li class="advanced-options hidden">
      <%= label_tag :min_date %>
      <input type="date" name="min_date">
    </li>
    <li class="advanced-options hidden">
      <%= label_tag :max_date %>
      <input type="date" name="max_date">
    <li class="advanced-options hidden">
      <%= submit_tag("Search", :class=>"location-search") %>
    </li>
  <% end %>
  <button id="advanced-search">More Options</button>
</ul>
</div>

