<div id="searchWindow" class="hidden">
  <%= form_tag '/events', remote: true do %>
    <%= label_tag :location %>
    <%= text_field_tag :location %>
    <%= label_tag :artist_name, nil,  :class => "advanced-options hidden-adv" %>
    <%= text_field_tag :artist_name, nil, :class => "advanced-options hidden-adv"%>
    <%= label_tag :date_min,nil,  :class => "advanced-options hidden-adv" %>
    <%= date_select :date_min,nil,  :class => "advanced-options hidden-adv"%>
    <%= label_tag :date_max,nil,  :class => "advanced-options hidden-adv"%>
    <%= date_select :date_max,nil,  :class => "advanced-options hidden-adv"%>
    <%= submit_tag "Search" %>
    <button id="advanced-search">More</button>
  <% end %>
</div>